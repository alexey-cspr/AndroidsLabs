<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exerciseList"
        android:layout_width="408dp"
        android:layout_height="470dp"
        android:layout_margin="10dp"
        android:layout_weight="7"
        app:layout_constraintTop_toBottomOf="@+id/text_training"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/text_training"
        android:layout_width="410dp"
        android:layout_height="69dp"
        android:hint="@string/training_name"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/delete_training_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/delete_training"
        android:layout_margin="75dp"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/add_exercise"
            android:src="@drawable/ic_baseline_add_24"
            android:tint="@android:color/black"
            android:background="@android:color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="15dp"
            android:text="Add" />

        <ImageButton
            android:id="@+id/run_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:onClick="start_timer"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_directions_run_24"
            android:tint="@android:color/black" />

        <ImageButton
            android:src="@drawable/ic_baseline_save_24"
            android:tint="@android:color/black"
            android:background="@android:color/holo_blue_dark"
            android:id="@+id/save_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="start_workout"
            android:padding="15dp"
            />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>